{
  "name": "@choigawoon/boilerplate",
  "version": "0.0.1",
  "description": "NPM package boilerplate with TypeScript, tsup, and GitHub Actions auto-deploy",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "npm run build",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "boilerplate",
    "npm-package",
    "typescript",
    "tsup"
  ],
  "author": "choigawoon",
  "license": "MIT",
  "devDependencies": {
    "@vitest/ui": "^4.0.14",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.14"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/choigawoon/boilerplate.git"
  }
}
